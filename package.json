{
  "name": "whybundled",
  "version": "1.4.2",
  "description": "Answers the question â€“ Why the hell is this module in a bundle?",
  "bin": "./cli.js",
  "main": "lib/index.js",
  "files": [
    "commands",
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/d4rkr00t/whybundled"
  },
  "engines": {
    "node": ">=8.4"
  },
  "scripts": {
    "ci:validate": "npm run lint:flow",
    "ci:test:coverage": "nyc --reporter=lcov npm test",
    "ci:github-release": "conventional-github-releaser -p angular",
    "test": "ava --verbose",
    "test:coverage": "nyc npm test",
    "lint:staged": "lint-staged",
    "lint:flow": "flow",
    "prepare": "npm run ci:validate",
    "release:major": "pmm major",
    "release:minor": "pmm minor",
    "release:patch": "pmm patch"
  },
  "pre-commit": [
    "lint:flow",
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "per-file": true,
    "include": [
      "lib/**/*.js",
      "commands/**/*.js"
    ],
    "exclude": [
      "lib/**/__tests__/**/*.js",
      "commands/**/__tests__/**/*.js"
    ],
    "cache": true,
    "all": true
  },
  "keywords": [
    "webpack",
    "bundle",
    "analyzer",
    "modules",
    "size",
    "dependencies"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "meow": "^6.0.1",
    "micromatch": "^4.0.2",
    "treeify": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^3.4.0",
    "conventional-github-releaser": "^3.1.3",
    "coveralls": "^3.0.9",
    "fixturez": "^1.1.0",
    "flow-bin": "^0.118.0",
    "lint-staged": "^10.0.7",
    "nyc": "^15.0.0",
    "pmm": "^2.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "strip-ansi": "^6.0.0"
  }
}
